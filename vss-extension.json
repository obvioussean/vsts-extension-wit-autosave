{
    "manifestVersion": 1,
    "id": "vsts-extension-wit-autosave",
    "version": "1.1.7",
    "name": "Work Item Autosave",
    "scopes": [
        "vso.work",
        "vso.work_write"
    ],
    "description": "Autosave the work item on field changes",
    "publisher": "seanferguson",
    "public": true,
    "icons": {
        "default": "img/autosave.png"
    },
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "tags": [
        "Work Item"
    ],
    "content": {
        "details": {
            "path": "README.md"
        }
    },
    "links": {
        "learn": {
            "uri": "https://github.com/sferg-msft/vsts-extension-wit-autosave"
        },
        "support": {
            "uri": "https://github.com/sferg-msft/vsts-extension-wit-autosave/issues"
        }
    },
    "branding": {
        "color": "#5C2D91",
        "theme": "dark"
    },
    "files": [
        {
            "path": "img",
            "addressable": true
        },
        {
            "path": "dist",
            "addressable": true,
            "packagePath": "scripts"
        },
        {
            "path": "node_modules/vss-web-extension-sdk/lib",
            "addressable": true,
            "packagePath": "lib"
        },
        {
            "path": "autosave.html",
            "addressable": true
        },
        {
            "path": "settings.html",
            "addressable": true
        }
    ],
    "categories": [
        "Plan and track"
    ],
    "contributions": [
        {
            "id": "autosave",
            "type": "ms.vss-work-web.work-item-notifications",
            "description": "",
            "targets": [
                "ms.vss-work-web.work-item-form"
            ],
            "properties": {
                "uri": "autosave.html"
            }
        },
        {
            "id": "autosave-settings-hub",
            "type": "ms.vss-web.hub",
            "description": "Settings for the Work Item Autosave extension",
            "targets": [
                "ms.vss-web.collection-admin-hub-group"
            ],
            "properties": {
                "name": "Work Item Autosave",
                "uri": "settings.html"
            }
        },
        {
            "id": "autosave-toolbar-button",
            "type": "ms.vss-web.action",
            "description": "Toolbar item to enable/disable autosave",
            "targets": [
                "ms.vss-work-web.work-item-toolbar-menu"
            ],
            "properties": {
                "text": "Autosave",
                "title": "Enables or disables autosave for this work item",
                "toolbarText": "Disable Autosave",
                "icon": "images/show-properties.png",
                "uri": "autosave.html"
            }
        }
    ]
}