{
    "manifestVersion": 1,
    "id": "vsts-extension-wit-autosave",
    "version": "1.0.0",
    "name": "Work Item Autosave",
    "scopes": [
        "vso.work",
        "vso.work_write"
    ],
    "description": "Autosave the work item on field changes",
    "publisher": "seanferguson",
    "public": false,
    "icons": {
        "default": "img/autosave.png"
    },
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "tags": [
        "Work Item"
    ],
    "content": {
        "details": {
            "path": "README.md"
        }
    },
    "links": {
        "learn": {
            "uri": "https://github.com/sferg-msft/vsts-extension-wit-autosave"
        },
        "support": {
            "uri": "https://github.com/sferg-msft/vsts-extension-wit-autosave/issues"
        }
    },
    "branding": {
        "color": "#5C2D91",
        "theme": "dark"
    },
    "files": [
        {
            "path": "img",
            "addressable": true
        },
        {
            "path": "scripts",
            "addressable": true
        },
        {
            "path": "autosave.html",
            "addressable": true
        }
    ],
    "categories": [
        "Plan and track"
    ],
    "contributions": [
        {
            "id": "autosave",
            "type": "ms.vss-work-web.work-item-notifications",
            "description": "",
            "targets": [
                "ms.vss-work-web.work-item-form"
            ],
            "properties": {
                "uri": "autosave.html"
            }
        }
    ]
}